<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project ld26-Kiasaki-Dagothig with libraries in sub-folder">
    <property name="build.dir" value="${user.home}/FactorismBuild/">
    </property>
	<target name="create_run_jar">
    	<jar destfile="${build.dir}Factorism.jar">
            <manifest>
                <attribute name="Main-Class" value="ld26_kiasaki_dagothig.Main"/>
                <attribute name="Class-Path" value=". lib/ibxm.jar lib/jinput.jar lib/lwjgl.jar lib/slick.jar"/>
            </manifest>
            <fileset dir="target/classes"/>
        </jar>
		
        <delete dir="${build.dir}lib"/>
        <mkdir dir="${build.dir}lib"/>
        <copy file="lib/ibxm.jar" todir="${build.dir}lib"/>
        <copy file="lib/jinput.jar" todir="${build.dir}lib"/>
        <copy file="lib/lwjgl.jar" todir="${build.dir}lib"/>
        <copy file="lib/slick.jar" todir="${build.dir}lib"/>
    	
	    <copy todir="${build.dir}">
	      <fileset dir="lib/natives"/>
	    </copy>
    	
        <delete dir="${build.dir}saves"/>
        <mkdir dir="${build.dir}saves"/>

        <delete dir="${build.dir}res"/>
        <mkdir dir="${build.dir}res"/>
	    <copy todir="${build.dir}res">
	      <fileset dir="res" excludes="media/"/>
	    </copy>
    </target>
</project>
